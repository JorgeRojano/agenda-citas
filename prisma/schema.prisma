generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id           String        @id @default(uuid())
  name         String
  duration     Int
  price        Int
  appointments Appointment[]
}

model Appointment {
  id         String   @id @default(uuid())
  serviceId  String
  clientName String
  phone      String
  dateTime   DateTime @unique(map: "appointment_unique_slot")
  status     String   @default("confirmed")
  createdAt  DateTime @default(now())
  service    Service  @relation(fields: [serviceId], references: [id])
  durationMinutes Int
}

model BlockedTime {
  id    String   @id @default(uuid())
  start DateTime
  end   DateTime
}
