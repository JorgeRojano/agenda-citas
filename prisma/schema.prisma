generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id    String @id
  role  String @default("user")

  @@map("profiles")
}

model Service {
  id           String        @id @default(uuid())
  name         String
  duration     Int
  price        Int
  appointments Appointment[]
}

model Appointment {
  id         String   @id @default(uuid())
  serviceId  String
  clientName String
  phone      String
  dateTime   DateTime
  status     String   @default("confirmed")
  createdAt  DateTime @default(now())
  service    Service  @relation(fields: [serviceId], references: [id])
  durationMinutes Int

  @@unique([dateTime, status], map: "unique_active_appointment")
}

model BlockedTime {
  id    String   @id @default(uuid())
  start DateTime
  end   DateTime
}
